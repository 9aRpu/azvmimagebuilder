{
    "type": "Microsoft.VirtualMachineImages",
    "apiVersion": "2018-02-01-preview",
    "location": "<Region>",
    "dependsOn": [],
    "properties": {
        "source": {
            "type": "PlatformImage",
                "publisher": "Canonical",
                "offer": "UbuntuServer",
                "sku": "18.04-LTS",
                "version": "18.04.201808140"
            
        },
        "customize": [
            {
                "type": "shell",
                "name": "HelloImageScript1",
                "script": "https://raw.githubusercontent.com/danielsollondon/azvmimagebuilder/master/quickquickstarts/customizeScript.sh"
            }
        ],
        "distribute": 
            [
                {   "type":"managedImage",
                    "imageId": "/subscriptions/<subcriptionID>/resourceGroups/<rgname>/providers/Microsoft.Compute/images/",
                    "location": "<Region>",
                    "runOutputName": "<imageName>",
                    "tags": {
                        "source": "azVmImageBuilder",
                        "baseosimg": "ubuntu1804"
                    }
                }
            ]
        }
    }